<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  
  
  <br><div class="textarea">   
    <%= f.text_area :text %>
  </div>

  <div class="field">
    <%= f.label "Add an image (paste url):" %>
    <%= f.text_field :url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<%= f.hidden_field :user_id, :value => session[:user_id] %>

<% end %>
